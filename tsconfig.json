{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "outDir": "lib/typings",
    "lib": ["dom", "esnext", "dom.iterable"],
    "rootDir": "src",
    "noEmit": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["__tests__", "lib"]
}
